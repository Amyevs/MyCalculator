<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/black"
    tools:context=".MainActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_weight="1.6"
        android:orientation="vertical">
        <TextView
            android:id="@+id/math_operation"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:textColor="@color/white"
            android:gravity="end"
            android:textSize="40sp"
            android:ellipsize="start"
            android:singleLine="true"
            app:layout_constraintBottom_toTopOf="@+id/math_operation"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />
        <TextView
            android:id="@+id/result_text"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:textColor="@color/white"
            android:gravity="end"
            android:textSize="30sp"
            android:ellipsize="end"
            android:singleLine="true"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:orientation="vertical">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp">
            <Button
                style="@style/Operations"
                android:id="@+id/btn_del"
                android:text="/">
            </Button>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp">

            <Button
                android:id="@+id/btn_7"
                style="@style/Numbers"
                android:text="7"></Button>
            <Button
                style="@style/Numbers"
                android:id="@+id/btn_8"
                android:text="8">
            </Button>
            <Button
                style="@style/Numbers"
                android:id="@+id/btn_9"
                android:text="9">
            </Button>
            <Button
                style="@style/Operations"
                android:id="@+id/btn_mult"
                android:text="*">
            </Button>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp">
            <Button
                style="@style/Numbers"
                android:id="@+id/btn_4"
                android:text="4">
            </Button>
            <Button
                style="@style/Numbers"
                android:id="@+id/btn_5"
                android:text="5">
            </Button>
            <Button
                style="@style/Numbers"
                android:id="@+id/btn_6"
                android:text="6">
            </Button>
            <Button
                style="@style/Operations"
                android:id="@+id/btn_plus"
                android:text="+">
            </Button>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp">
            <Button
                style="@style/Numbers"
                android:id="@+id/btn_1"
                android:text="1">
            </Button>
            <Button
                style="@style/Numbers"
                android:id="@+id/btn_2"
                android:text="2">
            </Button>
            <Button
                style="@style/Numbers"
                android:id="@+id/btn_3"
                android:text="3">
            </Button>
            <Button
                style="@style/Operations"
                android:id="@+id/btn_minus"
                android:text="-">
            </Button>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp">
            <Button
                style="@style/Operations"
                android:id="@+id/btn_C"
                android:text="C">
            </Button>

            <Button
                android:id="@+id/btn_0"
                style="@style/Numbers"
                android:text="0"></Button>
            <Button
                style="@style/Operations"
                android:id="@+id/btn_back"
                android:text="back">
            </Button>
            <Button
                style="@style/Operations"
                android:id="@+id/btn_equal"
                android:text="=">
            </Button>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>